{
    "manifest_version": 3,
    "name": "Kutay's Extension",
    "description": "My First Extension",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_title": "Click Me",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.google.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "bookmarks"
    ],
    "version": "1.0.0"
}